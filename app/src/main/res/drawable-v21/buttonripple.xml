<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#1EAAAA">
    <item>
        <shape android:color="#1EAAAA">
            <solid android:color="#3DD9CE" />
            <stroke
                android:width="3dp"
                android:color="#09AD9D"/>
            <corners
                android:radius="10dp"/>
        </shape>

    </item>
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#09AD9D"
                />
            <solid android:color="?android:colorAccent"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

</ripple>